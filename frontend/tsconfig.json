{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "./dist",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "app": ["src/app"],
      "config": ["src/config"],
      "auth": ["src/auth"],
      "components/*": ["src/components/*"],
      "pages/*": ["src/pages/*"]
    }
  },
  "include": ["src"]
}
